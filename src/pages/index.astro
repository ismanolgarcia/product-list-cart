---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import CartDetails from '../components/CartDetails.astro';
import data from '../../data.json';
---

<Layout title="Desserts">
  <main class="flex flex-col md:flex-row md:gap-0 gap-16">
    <div class="flex flex-col">
      <h1 class="font-bold text-4xl mb-8 text-Rose-900">Desserts</h1>
      <ul class="flex gap-6 flex-wrap justify-center">
        {
          data.map((menu) => (
            <Card
              urlImg={menu.image}
              name={menu.name}
              category={menu.category}
              price={menu.price}
            />
          ))
        }
      </ul>
    </div>
    <CartDetails />
  </main>
</Layout>
